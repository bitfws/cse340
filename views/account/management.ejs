<% if (messages && messages.notice) { %>
  <div class="flash-message">
    <%- messages() %>
  </div>
<% } %>

<h1><%= title %></h1>

<!-- Greeting -->
<% if (account.account_type === 'Employee' || account.account_type === 'Admin') { %>
  <h2>Welcome <%= account.account_firstname %>!</h2>
<% } else if (account.account_type === 'Client') { %>
  <h2>Hello <%= account.account_firstname %>, thanks for being a valued client!</h2>
<% } %>

<% if (account.account_type === 'Client') { %>
    <a href="/favorites">
    Favorites
  </a>
<% } %>

<!-- Update account link: visible for ALL users -->
<p>
  <a href="/account/update/<%= account.account_id %>">
    Update Account Information
  </a>
</p>

<!-- Inventory Management: ONLY for Employee or Admin -->
<% if (account.account_type === 'Employee' || account.account_type === 'Admin') { %>
  <h3>Inventory Management</h3>
  <p>
    <a href="/inv/">Manage Inventory</a>
  </p>
<% } %>
